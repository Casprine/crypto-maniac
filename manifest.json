{
   "permissions": [ "activeTab", "tabs", "storage" ],
   "author": "Awuah Asare Griffith",
   "background": {
      "persistance": false,
      "scripts": [ "./scripts/background.js" ]
   },
   "browser_action": {
      "default_icon": "./img/co-logo.png",
      "default_title": "CryptoManiac"
   },
   "chrome_url_overrides": {
      "newtab": "popup.html"
   },
   "description": "A chrome extension that enables you to see the realtime price of the top 6 crypto coins!",
   "homepage_url": "https://kree.xyz",
   "icons": {
      "128": "img/co-logo.png",
      "16": "img/img/favicon-16x16.png"
   },
   "manifest_version": 2,
   "name": "CryptoManiac", 
   "options_page": "popup.html",     
   "version": "1.0.0"
}
